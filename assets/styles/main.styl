body
  font-family: 'PingFang SC', 'Microsoft YaHei', '微软雅黑'
  overflow-x: hidden
// bulma extend
.center
  display: flex
  align-items: center
  justify-content: center
.is-fullwidth
  width: 100%
a
  color: #3e3a39
  &:hover
    color: #ee7623
    svg * 
      stroke: currentColor
  &.nuxt-link-active:not([href='/']):not([href='/en/'])
    color: #ee7623
    svg * 
      stroke: currentColor
  &.nuxt-link-exact-active
    color: #ee7623
.container
  @media screen and (min-width: 1472px)
    max-width: 1200px
    width: 1200px
.gray-radial-gradient
  background-image: radial-gradient( #fafafb, #d3d7da)
.theme-background-color
  background-color: #eff3f4 
.white-background-color 
  background-color: #fff 
.orange
  color: #e76c26    
